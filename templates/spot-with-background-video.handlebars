<div class="panel panel-default panel-video" title="{{Component}}">
    <video width="100%" height="100%" autoplay loop>
        <source src="video/Pfa2_converted.m4v" type="video/mp4">
    </video>
    <div class="panel-body">
        {{#if HeadingTwo}}
			<h2>{{HeadingTwo}}</h2>
		{{/if}}
		{{#if RichContent}}
			<div>{{{RichContent}}}</div>
		{{/if}}
		{{#if CTAText}}
			<a class="btn btn-default" {{link CTAUrl}} role="button">{{CTAText}}</a><br>
		{{/if}}
		{{#if LinkText}}
			<a {{link LinkUrl}}>{{LinkText}}</a><br>
		{{/if}}
    </div>
</div>